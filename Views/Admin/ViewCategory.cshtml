
@using PagedList.Mvc
@model  PagedList.IPagedList<OptiMice_Assign.Models.category>
@{
    ViewBag.Title = "ViewCategory";
}

@*<h2>ViewCategory</h2>*@
<div class="container">

    @*<div class="v-hh">
            <h3>Category</h3>
        </div>
        <hr />*@
    <div class="row" style="margin-bottom:40px;">
        @if (Model != null)
        {
            foreach (var item in Model)
            {

                <div class="col-md-4" style="height:220px;margin-top:150px;">
                    <img src="@Url.Content(item.cat_img)" style="height:250px;width:100%;" />
                    <br />
                    <h4 style="color: black;font-family:'poppins';text-align:center;margin-top:20px;">@Html.ActionLink(@item.cat_name, "DisplayAdd", new { id = item.cat_id })</h4>
                    <br />
                    <div style="text-align: center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.cat_id }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.cat_id }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </div>
            }
        }
    </div>
    <div id="container">
        <div class="row" style="margin-top:150px;">



            <div class="col-md-4" style="text-align:center;">
                <div class="pagination">
                    Page @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)
                    of @Model.PageCount @Html.PagedListPager(Model, page => Url.Action("ViewCategory", new { page }))
                </div>

            </div>
            <div class="col-md-4">
            </div>



        </div>
    </div>
    <div>
        @Html.ActionLink("Add Blog", "CreateAdd")
    </div>


</div>









