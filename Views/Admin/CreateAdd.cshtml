@model OptiMice_Assign.Models.Blog
@{
    ViewBag.Title = "CreateAdd";
}

@*<h2>CreateAdd</h2>*@


<div class="Cadd-h">

    <div class="row">
        <div class="col-lg-3">
        </div>

        <div class="col-lg-6">
            <div class="CA-col">
                <div id="main-div">
                    <div id="box" class="img-responsive">
                        @using (Html.BeginForm("CreateAdd", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                        <div class="insidebox">
                            <div><h1>Add Details</h1></div>
                            <hr />

                            @*<div class="imgcontainer">
            <img src="~/img/Admin_Img/add-details.png" alt="Avatar" class="avatar">
        </div>
        <br />*@

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    @Html.DropDownListFor(model => model.b_adm_id_fk, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })
                                </div>
                                <span style="color:red">@Html.ValidationMessageFor(model => model.b_adm_id_fk)</span>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    @Html.TextBoxFor(model => model.b_author, new { @class = "form-control", @placeholder = "Author" })
                                </div>
                                <span style="color:red">@Html.ValidationMessageFor(model => model.b_author)</span>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    @Html.TextBoxFor(model => model.b_title, new { @class = "form-control", @placeholder = "Title" })
                                </div>
                                <span style="color:red">@Html.ValidationMessageFor(model => model.b_title)</span>
                            </div>




                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    @Html.TextAreaFor(model => model.b_content, new { @class = "form-control", cols = "50", rows = "5", @placeholder = "Description" })
                                </div>
                                <span style="color:red">@Html.ValidationMessageFor(model => model.b_content)</span>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />
                                </div>
                            </div>

                            <div class="form-group submitt">
                                <input type="submit" value="ADD" class="btn btn-success " />
                            </div>
                            <div class="form-group">
                                <p style="color:red">@ViewBag.error</p>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3">
        </div>

    </div>
</div>



